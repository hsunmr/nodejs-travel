<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ATTRACTIONS</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/detail.css"> 
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+TC" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header'); %>
    <div class="container-fluid" id="content">
        <div class="container content-title">
            <img src="/images/attractions/attractions-banner.jpg" alt="" class="w-100">
            <h4 class="mt-3">推薦景點</h4>
        </div>  
        <div class="container content-link p-3 p-lg-5">
           
            <div class="row">
                <% attractions.forEach(function(attraction){ %>
                    <div class="col-md-4 p-3 p-3">
                        <a href="/attractions/<%= attraction.id %>">
                            <img src="<%= attraction.image %>" class="w-100 rounded">
                            <span class="font-weight-bold"><%= attraction.name %></span> 
                        </a>
                    </div>
                <% })%>
            </div>
        </div> 
    </div>
    <%- include('../layouts/footer'); %>
</body>
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="/vendor/fontawesome/js/all.min.js"></script>
<script src="/javascripts/detail.js"></script>
</html>